<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/awsite_test</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.connection.pool_size">10</property>
		<property name="connection.autocommit">false</property>

		<property name="hibernate.connection.provider_class">
			org.hibernate.connection.C3P0ConnectionProvider
		</property>
		<property name="hibernate.c3p0.min_size">1</property>
		<property name="hibernate.c3p0.max_size">20</property>
		<property name="hibernate.c3p0.timeout">30</property>
		<property name="hibernate.c3p0.idle_test_period">100</property>

		<property name="hibernate.show_sql">false</property>
		<property name="hibernate.format_sql">false</property>
		<property name="hibernate.dialect">br.com.adaptworks.awsite.bd.dialect.MySQL5InnoDBUTF8Dialect</property>
		<property name="hibernate.hbm2ddl.auto">update</property>

		<mapping class="br.com.adaptworks.awsite.bd.Usuario" />
		<mapping class="br.com.adaptworks.awsite.bd.Instrutor" />
		<mapping class="br.com.adaptworks.awsite.bd.Treinamento" />
		<mapping class="br.com.adaptworks.awsite.bd.Turma" />
		<mapping class="br.com.adaptworks.awsite.bd.Endereco" />
		<mapping class="br.com.adaptworks.awsite.bd.Evento" />
		<mapping class="br.com.adaptworks.awsite.bd.Questao" />
		<mapping class="br.com.adaptworks.awsite.bd.Opcao" />
		<mapping class="br.com.adaptworks.awsite.bd.Assessment" />
	</session-factory>

</hibernate-configuration>
